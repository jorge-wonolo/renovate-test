{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [ "config:base" ],
    "regexManagers": [
      {
        "fileMatch": [".*hcl$"],
        "matchStrings": [
            "image_tag\\s*=\\s*\"(?<currentValue>[^\"]+)\"[^}]*?}[^}]*?config\\s*{[^}]*?image\\s*=\\s*\"(?<depName>[^\"]+):"
        ],
        "datasourceTemplate": "docker",
        "versioningTemplate": "docker"
      }
    ]
}
